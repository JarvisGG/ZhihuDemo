    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jarvis.zhihudemo.MainActivity"
    android:background="@drawable/paper_background">

    <com.jarvis.library.widget.ZhihuRecyclerView
        android:id="@+id/float_view_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.jarvis.zhihudemo.view.AnswerPagerActionPanelView
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="112dp" />

</FrameLayout>
