<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/top_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:padding="10dp">

        <Button
            android:id="@+id/add_inner"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="addInner"/>

        <Button
            android:id="@+id/add_normal"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="addnormal"/>

        <Button
            android:id="@+id/remove_inner"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="removeInner"/>

        <Button
            android:id="@+id/remove_normal"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="removeNormal"/>

    </LinearLayout>


</FrameLayout>